      <div class="relative mx-auto w-[20rem] max-w-full">
        <img
          src="/silver-partner.svg"
          alt="Built by Pinelab, official Vendure Silver Partner"
          loading="eager"
          class="h-full w-full object-cover"
        />
      </div>
