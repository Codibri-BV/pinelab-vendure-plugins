{
  "compilerOptions": {
    "lib": ["es2017", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "declaration": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src/", "test"]
}
