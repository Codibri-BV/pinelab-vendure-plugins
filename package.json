{
  "name": "pinelab-vendure-plugins",
  "private": true,
  "keywords": [
    "vendure",
    "vendure-plugins",
    "vendure-packges"
  ],
  "scripts": {
    "postinstall": "yarn husky install",
    "install-deps": "yarn lerna exec --concurrency 1 yarn",
    "build": "yarn && yarn prettier:write && yarn install-deps && yarn lerna run build --concurrency 1",
    "lerna:publish": "yarn build && git stash && yarn lerna publish --concurrency 1 --changelog-preset conventionalcommits",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check .",
    "upgrade:vendure": "yarn lerna exec --concurrency 1 \"yarn upgrade --pattern @vendure --latest\"",
    "remove-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "husky": "^8.0.2",
    "lerna": "^6.0.3",
    "prettier": "^2.7.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "coinbase",
          "dutch-postalcode",
          "e-boekhouden",
          "goedgepickt",
          "google-cloud-tasks",
          "google-storage-assets",
          "invoices",
          "myparcel",
          "webhook",
          "admin-ui-helpers",
          "order-export",
          "shipping",
          "stock-monitoring",
          "sendcloud",
          "metrics",
          "stripe-subscription",
          "limit-variant",
          "variant-bulk-update",
          "customer-managed-groups",
          "sort-by-popularity",
          "all-plugins"
        ]
      ]
    }
  }
}
