{
  "name": "pinelab-vendure-plugins",
  "private": true,
  "workspaces": [
    "packages/vendure-plugin-admin-ui-helpers"
  ],
  "keywords": [
    "vendure",
    "vendure-plugins",
    "vendure-packages"
  ],
  "scripts": {
    "postinstall": "yarn husky install",
    "install-deps": "yarn lerna exec --concurrency 1 yarn",
    "build": "yarn && yarn lerna run build --concurrency 1",
    "lerna:publish": "yarn build && git stash && yarn lerna publish --concurrency 1 --changelog-preset conventionalcommits",
    "loading-message": "echo \"\\033[0;36mLinting... This might take a minute\\033[0m\"",
    "lint": "yarn loading-message && NODE_OPTIONS=\"--max-old-space-size=8192\" yarn eslint",
    "lint:check": "yarn prettier --check . &&  yarn lint .",
    "lint:fix": "yarn prettier --write . && yarn lint --fix .",
    "upgrade:vendure": "yarn lerna exec --concurrency 1 \"yarn upgrade --pattern @vendure --latest\"",
    "remove-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@vendure/admin-ui-plugin": "2.0.4",
    "@vendure/core": "2.0.4",
    "@vendure/testing": "2.0.4",
    "@vendure/ui-devkit": "2.0.4",
    "copyfiles": "2.4.1",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard-with-typescript": "34.0.1",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-n": "15.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint": "8.0.1",
    "husky": "8.0.2",
    "lerna": "6.0.3",
    "nodemon": "2.0.15",
    "prettier": "2.8.7",
    "rimraf": "3.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.9.5",
    "vitest": "0.30.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "coinbase",
          "dutch-postalcode",
          "e-boekhouden",
          "goedgepickt",
          "google-cloud-tasks",
          "google-storage-assets",
          "invoices",
          "myparcel",
          "webhook",
          "admin-ui-helpers",
          "order-export",
          "shipping",
          "stock-monitoring",
          "sendcloud",
          "metrics",
          "stripe-subscription",
          "limit-variant",
          "variant-bulk-update",
          "picqer",
          "customer-managed-groups",
          "popularity-scores",
          "modify-customer-orders",
          "multiserver-db-sessioncache",
          "vendure-order-client",
          "all-plugins"
        ]
      ]
    }
  }
}
